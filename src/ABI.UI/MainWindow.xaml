<Window
    x:Class="ABI.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="MainWindow"
    Width="420"
    Height="250"
    ResizeMode="NoResize"
    Style="{StaticResource LightWindowStyle}"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="0"
            Grid.Column="0"
            Margin="8,4,2,2"
            Style="{StaticResource LightLeftEarbudStyle}" />

        <Image
            Grid.Row="0"
            Grid.Column="1"
            Margin="2,4,2,4"
            Style="{StaticResource LightCaseStyle}" />

        <Image
            Grid.Row="0"
            Grid.Column="2"
            Margin="2,4,8,2"
            Style="{StaticResource LightRightEarbudStyle}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="8,0,0,0"
            HorizontalAlignment="Left"
            Content="{Binding Path=LeftEarbudBattery, Mode=OneWay}"
            Style="{StaticResource LightBatteryIndicatorLabelsStyle}" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="N/A"
            Style="{StaticResource LightBatteryIndicatorLabelsStyle}" />

        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,0,8,0"
            HorizontalAlignment="Right"
            Content="N/A"
            Style="{StaticResource LightBatteryIndicatorLabelsStyle}" />

        <tb:TaskbarIcon
            Name="tbIcon"
            Grid.Row="2"
            Style="{StaticResource DefaultTrayIconStyle}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" />
                    <MenuItem Header="Settings" />
                    <MenuItem Header="Exit" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

    </Grid>
</Window>
